<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".PersonalRecords">

    <TextView
        android:id="@+id/proPage_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baumans"
        android:text="Profile Page"
        android:textAlignment="center"
        android:textSize="34sp" />

    <TextView
        android:id="@+id/subName_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baumans"
        android:gravity="center" />

    <ListView
        android:id="@+id/records_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/editRecords_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Edit Records" />

        <Button
            android:id="@+id/createLeague_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Create League" />

        <Button
            android:id="@+id/joinLeague_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:text="Join League" />

    </LinearLayout>

    <TextView
        android:id="@+id/view_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Leaderboard:" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/monza_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monza"
            android:visibility="visible" />

        <Button
            android:id="@+id/spa_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spa" />

        <Button
            android:id="@+id/barcelona_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Barcelona" />

        <ImageView
            android:id="@+id/raceCar_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/racecar" />

        <ImageView
            android:id="@+id/raceCar2_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:src="@drawable/racecar2" />

    </LinearLayout>
</LinearLayout>